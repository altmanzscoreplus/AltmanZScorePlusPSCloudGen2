{
  "name": "powersight-gen2",
  "version": "2.0.0",
  "description": "PowerSight IoT Monitoring System - AWS Amplify Gen 2",
  "private": true,
  "scripts": {
    "build": "npm run typecheck && npm run build:backend",
    "build:backend": "tsc --noEmit && npx ampx generate outputs",
    "build:frontend": "echo 'Add your frontend build command here (e.g., npm run build:react, npm run build:vue, etc.)'",
    "start": "npm run sandbox",
    "dev": "npm run sandbox",
    "deploy": "npx ampx pipeline-deploy --branch main",
    "deploy:sandbox": "npx ampx sandbox",
    "deploy:prod": "npx ampx pipeline-deploy --branch main --app-id YOUR_APP_ID",
    "generate": "npx ampx generate outputs",
    "generate:client-config": "npx ampx generate client-config",
    "sandbox": "npx ampx sandbox",
    "sandbox:delete": "npx ampx sandbox delete",
    "configure": "npx ampx configure",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .amplify amplify_outputs.json node_modules/.cache",
    "clean:full": "npm run clean && rm -rf node_modules amplify/functions/*/node_modules",
    "setup": "npm install && npx ampx configure",
    "install:functions": "cd amplify/functions && for dir in */; do (cd \"$dir\" && npm install); done",
    "migrate": "echo 'Migration from Gen 1 to Gen 2 completed'",
    "test": "echo 'Add tests here'",
    "test:functions": "echo 'Add function tests here'",
    "lint": "echo 'Add linting commands here'",
    "format": "echo 'Add formatting commands here'"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.3.0",
    "@aws-amplify/backend-cli": "^1.3.0",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.1",
    "@types/aws-lambda": "^8.10.145",
    "aws-cdk-lib": "^2.167.1",
    "constructs": "^10.4.2"
  },
  "dependencies": {
    "aws-amplify": "^6.11.1",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws-sdk/client-ses": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@aws-sdk/client-pinpoint": "^3.700.0",
    "@aws-sdk/client-iot-data-plane": "^3.700.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "amplify",
    "amplify-gen2",
    "aws",
    "powersight",
    "iot",
    "monitoring",
    "typescript",
    "serverless"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/powersight-gen2"
  },
  "author": "PowerSight Team",
  "license": "UNLICENSED"
}